                                <a href="{{ path('categoria_show', { 'id': categoria.id }) }}">{{ categoria.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('seccion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('seccion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
