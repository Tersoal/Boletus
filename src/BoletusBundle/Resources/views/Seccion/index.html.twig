            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Categorias</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td><a href="{{ path('seccion_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>
                    <ul>
                        {% for categoria in entity.categorias %}
