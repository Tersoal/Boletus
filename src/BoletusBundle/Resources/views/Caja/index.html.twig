{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Caja list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Anchura</th>
                <th>Altura</th>
                <th>Longitud</th>
                <th>Volumen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td><a href="{{ path('caja_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.width }}</td>
                <td>{{ entity.height }}</td>
                <td>{{ entity.length }}</td>
                <td>{{ entity.volume }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('caja_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('caja_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('caja_new') }}">
                Create a new entry
            </a>
        </li>
        <li>
            <a href="{{ path('boletus_homepage') }}">
                Panel de Administraci√≥n
            </a>
        </li>
    </ul>
    {% endblock %}
